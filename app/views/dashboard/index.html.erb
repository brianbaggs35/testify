<% content_for :title, "Dashboard" %>

<div class="mb-8">
  <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>
  <p class="mt-2 text-sm text-gray-700">Overview of your testing activities and performance metrics.</p>
</div>

<!-- Quick Stats Overview -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Test Cases</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @total_test_cases %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Test Suites</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @total_test_suites %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-purple-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">JUnit Uploads</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @total_junit_uploads %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Tests Executed</dt>
            <dd class="text-lg font-medium text-gray-900"><%= @total_test_results + @total_automated_tests %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Manual vs Automated Testing Sections -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Manual Testing Section -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Manual Testing</h3>
        <%= link_to test_cases_path, class: "text-indigo-600 hover:text-indigo-900 text-sm" do %>
          View All →
        <% end %>
      </div>
      
      <!-- Manual Testing Stats -->
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="text-center p-4 bg-blue-50 rounded-lg">
          <div class="text-2xl font-bold text-blue-600"><%= @total_test_runs %></div>
          <div class="text-sm text-blue-700">Test Runs</div>
        </div>
        <div class="text-center p-4 bg-green-50 rounded-lg">
          <div class="text-2xl font-bold text-green-600"><%= @overall_pass_rate %>%</div>
          <div class="text-sm text-green-700">Pass Rate</div>
        </div>
      </div>

      <!-- Manual Test Results -->
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Passed</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: <%= @total_test_results > 0 ? (@passed_tests.to_f / @total_test_results * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @passed_tests %></span>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Failed</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-red-500 h-2 rounded-full" style="width: <%= @total_test_results > 0 ? (@failed_tests.to_f / @total_test_results * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @failed_tests %></span>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Pending</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-yellow-500 h-2 rounded-full" style="width: <%= @total_test_results > 0 ? (@pending_tests.to_f / @total_test_results * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @pending_tests %></span>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="mt-6 flex space-x-3">
        <%= link_to new_test_case_path, class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-2 rounded-md text-sm font-medium text-center" do %>
          New Test Case
        <% end %>
        <%= link_to new_test_suite_path, class: "flex-1 bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded-md text-sm font-medium text-center" do %>
          New Suite
        <% end %>
      </div>
    </div>
  </div>

  <!-- Automated Testing Section -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Automated Testing</h3>
        <%= link_to junit_uploads_path, class: "text-indigo-600 hover:text-indigo-900 text-sm" do %>
          View All →
        <% end %>
      </div>
      
      <!-- Automated Testing Stats -->
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="text-center p-4 bg-purple-50 rounded-lg">
          <div class="text-2xl font-bold text-purple-600"><%= @parsed_junit_uploads %></div>
          <div class="text-sm text-purple-700">Successful Uploads</div>
        </div>
        <div class="text-center p-4 bg-green-50 rounded-lg">
          <div class="text-2xl font-bold text-green-600"><%= @automated_pass_rate %>%</div>
          <div class="text-sm text-green-700">Pass Rate</div>
        </div>
      </div>

      <!-- Automated Test Results -->
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Passed</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-green-500 h-2 rounded-full" style="width: <%= @total_automated_tests > 0 ? (@passed_automated_tests.to_f / @total_automated_tests * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @passed_automated_tests %></span>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Failed</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-red-500 h-2 rounded-full" style="width: <%= @total_automated_tests > 0 ? (@failed_automated_tests.to_f / @total_automated_tests * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @failed_automated_tests %></span>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Errors</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-orange-500 h-2 rounded-full" style="width: <%= @total_automated_tests > 0 ? (@error_automated_tests.to_f / @total_automated_tests * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @error_automated_tests %></span>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Skipped</span>
          <div class="flex items-center">
            <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
              <div class="bg-yellow-500 h-2 rounded-full" style="width: <%= @total_automated_tests > 0 ? (@skipped_automated_tests.to_f / @total_automated_tests * 100) : 0 %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-900"><%= @skipped_automated_tests %></span>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="mt-6 flex space-x-3">
        <%= link_to new_junit_upload_path, class: "flex-1 bg-purple-600 hover:bg-purple-700 text-white px-3 py-2 rounded-md text-sm font-medium text-center" do %>
          Upload JUnit
        <% end %>
        <%= link_to automated_reports_path, class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-2 rounded-md text-sm font-medium text-center" do %>
          View Reports
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Testing Trends Chart -->
<div class="bg-white shadow rounded-lg mb-8">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Testing Activity Trends (Last 7 Days)</h3>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div>
        <h4 class="text-base font-medium text-gray-900 mb-2">Manual Test Results</h4>
        <%= line_chart @manual_test_trend, height: "200px", colors: ["#6366F1"] %>
      </div>
      <div>
        <h4 class="text-base font-medium text-gray-900 mb-2">Automated Test Results</h4>
        <%= line_chart @automated_test_trend, height: "200px", colors: ["#8B5CF6"] %>
      </div>
    </div>
  </div>
</div>

<!-- Priority Distribution & Recent Activity -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Test Case Priority Distribution -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Test Case Priority Distribution</h3>
      <% if @priority_distribution.any? %>
        <%= pie_chart @priority_distribution, height: "300px", colors: ["#EF4444", "#F59E0B", "#10B981", "#6B7280"] %>
      <% else %>
        <div class="flex items-center justify-center h-48 text-gray-500">
          No test cases available
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Recent Activity</h3>
      <% if @recent_activity.any? %>
        <div class="flow-root">
          <ul class="-mb-8">
            <% @recent_activity.each_with_index do |activity, index| %>
              <li>
                <div class="relative pb-8">
                  <% unless index == @recent_activity.length - 1 %>
                    <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                  <% end %>
                  <div class="relative flex space-x-3">
                    <div>
                      <span class="h-8 w-8 rounded-full 
                        <%= activity[:type] == 'junit_upload' ? 'bg-purple-500' : 'bg-blue-500' %> 
                        flex items-center justify-center ring-8 ring-white">
                        <% if activity[:type] == 'junit_upload' %>
                          <svg class="h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                          </svg>
                        <% else %>
                          <svg class="h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                          </svg>
                        <% end %>
                      </span>
                    </div>
                    <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                      <div>
                        <p class="text-sm text-gray-900">
                          <%= link_to activity[:title], activity[:link], class: "font-medium hover:text-indigo-600" %>
                        </p>
                        <p class="text-sm text-gray-500">
                          <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                            <%= case activity[:status]
                                  when 'Parsed', 'Completed' then 'bg-green-100 text-green-800'
                                  when 'Error', 'Failed' then 'bg-red-100 text-red-800'
                                  else 'bg-yellow-100 text-yellow-800'
                                end %>">
                            <%= activity[:status] %>
                          </span>
                        </p>
                      </div>
                      <div class="text-right text-sm whitespace-nowrap text-gray-500">
                        <%= time_ago_in_words(activity[:time]) %> ago
                      </div>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">No recent activity.</p>
      <% end %>
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://unpkg.com/chartkick@4"></script>
<% end %>
