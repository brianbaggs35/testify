<div class="px-4 py-6 sm:px-0">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <div class="flex items-center space-x-4">
        <%= link_to test_runs_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold text-gray-900">Create Test Run</h1>
      </div>
      <p class="mt-2 text-sm text-gray-700">Start a new test execution run from a test suite</p>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= form_with model: @test_run, local: true, class: "space-y-6" do |form| %>
          <% if @test_run.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    <%= pluralize(@test_run.errors.count, "error") %> prohibited this test run from being saved:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @test_run.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= form.label :name, "Test Run Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, 
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
                  placeholder: "Enter test run name..." %>
          </div>

          <div>
            <%= form.label :test_suite_id, "Test Suite", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :test_suite_id, 
                  options_from_collection_for_select(@test_suites, :id, :name, @test_run.test_suite_id),
                  { prompt: "Select a test suite..." },
                  { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div>
            <%= form.label :status, "Initial Status", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :status, 
                  options_for_select([["Pending", "Pending"], ["In Progress", "In_Progress"]], @test_run.status || "Pending"),
                  {},
                  { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
          </div>

          <div class="flex justify-end space-x-3">
            <%= link_to "Cancel", test_runs_path, 
                  class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Create Test Run", 
                  class: "bg-indigo-600 hover:bg-indigo-700 text-white py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
